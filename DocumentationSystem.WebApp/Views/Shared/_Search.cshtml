<form asp-controller="Home" asp-action="Index" method="get" class="form-inline ml-3">
    <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" name="search" placeholder="@if (ViewBag.search == null)
                {
                    @: Ara
                }
                else
                {
                    @: @ViewBag.search
                }" aria-label="Search">
        <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>








