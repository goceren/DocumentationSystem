@model DocumentationSystem.Entity.DocSysDepartments

<div class="container mt-4">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Departman Güncelle</h1>
                    </div>
                </div>
            </div>
        </section>
        @if (Model != null)
        {
    <form asp-controller="Department" asp-action="EditDepartment" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="DepartmentId" />
        <section class="content p-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">İçerik</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="DepartmentName">Departman Adı</label>
                                <input asp-for="DepartmentName" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="DepartmentName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DeparmentDetail">Departman Açıklaması</label>
                                <input asp-for="DeparmentDetail" class="form-control">
                                <span class="text-danger" asp-validation-for="DeparmentDetail"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentPhone">Telefon</label>
                                <input asp-for="DepartmentPhone" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="DepartmentPhone"></span>
                            </div>
                            <div class="form-group">
                                <label>Aktiflik Durumu</label>
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="DepartmentIsActive" class="custom-control-input" type="checkbox">
                                    <label asp-for="DepartmentIsActive" class="custom-control-label">Aktif</label>
                                    <span class="text-danger" asp-validation-for="DepartmentIsActive"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pb-4">
                <div class="col-12">
                    <a asp-controller="Department" asp-action="Index" class="btn btn-danger btn-lg">Vazgeç</a>
                    <input type="submit" value="Güncelle" class="btn btn-success float-right btn-lg">
                </div>
            </div>
        </section>
    </form>}
    </div>
</div>